<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecievedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recieved message" />

        <Button
            android:id="@+id/bSubOnActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe on activity" />

        <Button
            android:id="@+id/bSubInService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe in service" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service status"
            android:id="@+id/tvServiceStatus"/>
    </LinearLayout>

</RelativeLayout>